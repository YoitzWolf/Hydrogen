<resources>
    <!-- Base application theme. -->
    <style name="totalBold">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="total">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="totalMono">
        <item name="fontFamily">serif-monospace</item>
    </style>

    <style name="LogoProgress">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:padding">20dp</item>

        <item name="android:indeterminateDrawable">@drawable/rotated_layer_list_shape_logo_light
        </item>
    </style>

    <style name="Toolbar" parent="totalBold"></style>

    <style name="Editor" parent="totalMono">
        <item name="android:textColor">@color/smoothLight</item>
    </style>

    <style name="Button" parent="totalBold">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ToolbarButton" parent="Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ToolbarButtonUnit" parent="Button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">7pt</item>
        <item name="android:background">@drawable/button_rounded_selector</item>
    </style>

    <style name="TypicalButton" parent="Button">
        <item name="android:layout_margin">10dp</item>

        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_selector</item>
    </style>

    <style name="CircledButton" parent="Button">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@drawable/button_circle_selector</item>
        <item name="android:textColor">@color/button_circle_text_color</item>
    </style>

    <style name="PlusButton" parent="Button">
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@drawable/plus_button_selector</item>
    </style>

    <style name="Input32">
        <item name="android:backgroundTintMode">add</item>
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">12pt</item>

        <item name="android:textCursorDrawable">@drawable/cursor_bold</item>
        <item name="background">@android:color/transparent</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/smoothLight</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">32</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/smoothLight</item>
        <item name="android:textSize">12pt</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

</resources>